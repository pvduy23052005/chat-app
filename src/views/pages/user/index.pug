extends ../../layout/default.pug

block main 
  .container.py-3 
    .container-user
      .header 
        h3 Danh sách người dùng
      .row-users 
        each user in users
          .box-user 
            .inner-avatar 
              img(
                src=(user.avatar ? user.avatar : "/images/default-avatar.webp") 
                alt=user.fullName
              )

            .inner-info 
              .inner-name #{user.fullName}
              .inner-actions 
                button(class="btn-action btn-add" user-id=user.id) 
                  i.fa-solid.fa-user-plus
                  |  Kết bạn
                button(class = "btn-action btn-cancel" user-id = user.id) 
                  i(class='bx bx-message-circle-x')
                  | Hủy
                button(class="btn-action btn-chat" user-id=user.id) 
                  i.fa-solid.fa-comment
                  |  Nhắn tin